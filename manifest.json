{
  "manifest_version": 3,
  "name": "Kudos 'em all",
  "version": "1.0",
  "description": "Because everyone deserves a little recognition",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": ["https://www.strava.com/*"],
  "content_scripts": [
    {
      "matches": [
        "*://*.strava.com/*"
      ],
      "js": ["js/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
} 